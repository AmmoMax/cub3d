{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Parser run",
            "command": "clang",
            "args": [
                "-g",
                "${file}",
                "-L.",
                "-lft",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}